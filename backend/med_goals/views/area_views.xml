<odoo>
    <data>

        <record id="view_med_area_tree" model="ir.ui.view">
            <field name="name">med.area.tree</field>
            <field name="model">med.area</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="view_med_area_form" model="ir.ui.view">
            <field name="name">med.area.form</field>
            <field name="model">med.area</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_med_area" model="ir.actions.act_window">
            <field name="name">Areas</field>
            <field name="res_model">med.area</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_med_area"
                  name="Areas"
                  parent="menu_med_goals_configuration"
                  action="action_med_area"
                  sequence="1"/>
    </data>
</odoo>
