<odoo>
    <data>

        <!-- List view -->
        <record id="view_med_employee_score_tree" model="ir.ui.view">
            <field name="name">med.employee.score.tree</field>
            <field name="model">med.employee.score</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name="cycle_id"/>
                    <field name="score_total"/>
                    <field name="score_goals"/>
                    <field name="score_productivity"/>
                    <field name="score_quality"/>
                    <field name="score_economic"/>
                    <field name="rank_global"/>
                    <field name="rank_area"/>
                    <field name="rank_specialty"/>
                    <field name="is_top_performer"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_med_employee_score_form" model="ir.ui.view">
            <field name="name">med.employee.score.form</field>
            <field name="model">med.employee.score</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="employee_id"/>
                            <field name="cycle_id"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                        <group string="Scores">
                            <field name="score_total"/>
                            <field name="score_goals"/>
                            <field name="score_productivity"/>
                            <field name="score_quality"/>
                            <field name="score_economic"/>
                        </group>
                        <group string="Ranking">
                            <field name="rank_global"/>
                            <field name="rank_area"/>
                            <field name="rank_specialty"/>
                            <field name="is_top_performer"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_med_employee_score" model="ir.actions.act_window">
            <field name="name">Employee Scores</field>
            <field name="res_model">med.employee.score</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu (Reporting) -->
        <menuitem id="menu_med_employee_score"
                  name="Employee Scores"
                  parent="menu_med_goals_reporting"
                  action="action_med_employee_score"
                  sequence="1"/>
    </data>
</odoo>
