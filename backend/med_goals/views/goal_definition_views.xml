<odoo>
    <data>

        <record id="view_med_goal_definition_tree" model="ir.ui.view">
            <field name="name">med.goal.definition.tree</field>
            <field name="model">med.goal.definition</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code" optional="show"/>
                    <field name="name"/>
                    <field name="category" widget="badge" 
                           decoration-info="category == 'goal'" 
                           decoration-warning="category == 'productivity'" 
                           decoration-success="category == 'quality'"/>
                    <field name="target_type" widget="badge" 
                           decoration-success="target_type == 'monetary'"/>
                    <field name="area_id" optional="hide"/>
                    <field name="weight"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="view_med_goal_definition_form" model="ir.ui.view">
            <field name="name">med.goal.definition.form</field>
            <field name="model">med.goal.definition</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g. Monthly Sales Generated"/></h1>
                            <h3><field name="code" placeholder="Code (e.g. GOAL-001)"/></h3>
                        </div>
                        <group>
                            <group string="Configuration">
                                <field name="company_id" options="{'no_create': True}"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                            <group string="Classification">
                                <field name="area_id" options="{'no_create': True}"
                                       domain="[('company_id', '=', company_id)]"/>
                                <field name="specialty_id" options="{'no_create': True}"
                                       domain="[('area_id', '=', area_id)]"/>
                            </group>
                        </group>

                        <group string="Scoring Logic (CRITICAL)">
                            <group>
                                <field name="category" widget="radio" options="{'horizontal': true}"/>
                                <div class="text-muted" colspan="2">
                                    * <b>Strategic Goal:</b> Standard goals.<br/>
                                    * <b>Productivity:</b> Goes to Productivity Score.<br/>
                                    * <b>Quality:</b> Goes to Quality Score.
                                </div>
                            </group>
                            <group>
                                <field name="target_type" widget="radio"/> 
                                <field name="default_target_value"/>
                                <field name="weight"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Describe how this goal is measured..."/>
                            </page>
                            <page string="Assignments History">
                                <field name="assignment_ids" readonly="1">
                                    <tree decoration-success="state == 'done'" decoration-info="state == 'in_progress'">
                                        <field name="evaluation_cycle_id"/>
                                        <field name="employee_id"/>
                                        <field name="target_value"/>
                                        <field name="actual_value"/>
                                        <field name="completion_rate" widget="progressbar"/>
                                        <field name="state" widget="badge"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_med_goal_definition" model="ir.actions.act_window">
            <field name="name">Goal Definitions</field>
            <field name="res_model">med.goal.definition</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_med_goal_definition"
                  name="Goal Definitions"
                  parent="menu_med_goals_configuration"
                  action="action_med_goal_definition"
                  sequence="3"/>
    </data>
</odoo> 