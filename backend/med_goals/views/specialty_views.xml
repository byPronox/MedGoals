<odoo>
    <data>

        <record id="view_med_specialty_tree" model="ir.ui.view">
            <field name="name">med.specialty.tree</field>
            <field name="model">med.specialty</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="area_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="view_med_specialty_form" model="ir.ui.view">
            <field name="name">med.specialty.form</field>
            <field name="model">med.specialty</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="area_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_med_specialty" model="ir.actions.act_window">
            <field name="name">Specialties</field>
            <field name="res_model">med.specialty</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_med_specialty"
                  name="Specialties"
                  parent="menu_med_goals_configuration"
                  action="action_med_specialty"
                  sequence="2"/>
    </data>
</odoo>
