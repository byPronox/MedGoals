<odoo>
    <data>

        <!-- List view -->
        <record id="view_med_goal_assignment_tree" model="ir.ui.view">
            <field name="name">med.goal.assignment.tree</field>
            <field name="model">med.goal.assignment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="evaluation_cycle_id"/>
                    <field name="goal_id"/>
                    <field name="target_value"/>
                    <field name="actual_value"/>
                    <field name="completion_rate"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_med_goal_assignment_form" model="ir.ui.view">
            <field name="name">med.goal.assignment.form</field>
            <field name="model">med.goal.assignment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <header>
                            <field name="state" widget="statusbar"/>
                        </header>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="employee_id"/>
                            <field name="area_id" readonly="1"/>
                            <field name="specialty_id" readonly="1"/>
                            <field name="evaluation_cycle_id"/>
                        </group>
                        <group>
                            <field name="goal_id"/>
                            <field name="target_value"/>
                            <field name="unit"/>
                            <field name="actual_value"/>
                            <field name="completion_rate" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Performance Logs">
                                <field name="performance_log_ids">
                                    <tree editable="bottom">
                                        <field name="date"/>
                                        <field name="name"/>
                                        <field name="metric_value"/>
                                        <field name="notes"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_med_goal_assignment" model="ir.actions.act_window">
            <field name="name">Goal Assignments</field>
            <field name="res_model">med.goal.assignment</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu (Operations) -->
        <menuitem id="menu_med_goal_assignment"
                  name="Goal Assignments"
                  parent="menu_med_goals_operations"
                  action="action_med_goal_assignment"
                  sequence="1"/>
    </data>
</odoo>
